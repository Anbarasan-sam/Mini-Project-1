<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoBlaze Test Suite" parallel="false"> <!-- Disable parallel execution -->

    <!-- SignUp Tests -->
    <test name="SignUp Functionality">
    	<groups>
            <run>
                <include name="signUp" />  <!-- Include signUp group -->
            </run>
        </groups>
        <classes>
            <class name="MiniProject1.SignUpTest" />
        </classes>
    </test>
    
 <!-- Login Tests -->
    <test name="Login Functionality">
        <groups>
            <run>
                <include name="Login" />
            </run>
        </groups>
        <classes>
            <class name="MiniProject1.LoginTest" />
        </classes>
    </test>

    <!-- Product Tests -->
    <test name="Product Functionality">
        <groups>
            <run>
                <include name="Product" />
            </run>
        </groups>
        <classes>
            <class name="MiniProject1.ProductDetailsTest" />
        </classes>
    </test>

    <!-- Cart Tests -->
    <test name="Cart Functionality">
